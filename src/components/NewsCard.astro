---
import dayjs from 'dayjs';
const { content } = Astro.props;
const date = dayjs(content.publishedDate).format('YYYY.MM.DD');
console.log(content)
---

<a href={'/news/' + content.id} class="sokenkai__newscard">
  <div>
    <h4>{content.tag}</h4>
    <p>{date}</p>
  </div>
  <hr>
  <div>
    <figure></figure>
    <div>
      <h3>{content.title}</h3>
      <div set:html={content.content}></div>
    </div>
  </div>
</a>
